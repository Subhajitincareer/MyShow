  "main": "index.js",
  "scripts": {
    "watch-client": "chokidar \"../client/src/**/*\" -c \"npm run build-client\"",
    "build-client": "cd ../client && npm run build",
    "dev": "concurrently \"npm run watch-client\" \"nodemon src/server.js\"",
    "build": "npm run build-client && npx prisma generate",
    "start": "node src/server.js",
    "postinstall": "npx prisma generate"
  },
